<h2>Log In!</h2>

<%= form_tag sessions_path do %>
  <div class="form-group">
    <%= label_tag :username, "Username", class: "col-md-1 control-label" %>
    <div class="col-md-6">
      <%= text_field_tag :username, params[:username], class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= label :password, "Password", class: "col-md-1 control-label" %>
    <div class="col-md-6">
      <%= password_field_tag :password, params[:password], class: "form-control" %>
    </div>
  </div>
  <%= submit_tag "Log In", class: "btn btn-primary" %>
<% end %>
