<div id="text-<%= object.id %>">
  <div class="panel panel-default">
    <div class="panel-body">
      <div class="col-md-10">

        <strong><%= link_to "#{object.user.username}", user_path(object.user), class: "btn btn-info" %>  </strong>
        <%= object.text %>
      </div>
      <% if !current_user.nil? && current_user.id == object.user_id %>
        <div class="col-md-2">
          <%= link_to "Delete", tweet_path(object),
                data: {confirm: "Are you sure?",
                method: "delete"},
                class: 'btn btn-danger btn-xs',
                remote: true %>
        </div>
      <% end %>
    </div>
  </div>
</div>
